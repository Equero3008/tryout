<h2>
  <%= @post.title %>
</h2>

<p>
  <%= @post.text %>
</p>

<% if @post.tags.any? %>
    <h3>
        Tags
    </h3>
    <ul>
        <% @post.tags.each do |tag| %>
            <li>
                <p>
                    <%= tag.keyword %>
                </p>
            </li>
        <% end %>
    </ul>
<% end %>

<% if @post.comments.any? %>
    <h3>
    Comments
    </h3>
    <ul>
        <% @post.comments.each do |comment| %>
            <li>
                <p>
                    <%= comment.text %>
                </p>
                <p>
                    <%= comment.email %>
                </p>
                <div>
                    <%= button_to 'delete', post_comment_path(@post, comment), method: :delete %>
                </div>
            </li>
        <% end %>
    </ul>
<% end %>

<ul>
    <%= form_with model: [@post, Comment.new] do |f| %>
        <li>
                <%= f.label :text %>
                <%= f.text_area :text %>
            </li>
            <li>
                <%= f.label :email %>
                <%= f.email_field :email %>
            </li>
            <li>
                <%= f.submit %>
            </li>
    <% end %>
   
</ul>